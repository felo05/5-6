# Define the platform for your project
platform :ios, '16.0'  # Increased from 13.0 to meet mobile_scanner requirements

# CocoaPods installation settings
install! 'cocoapods', :deterministic_uuids => false

# Specify the Flutter SDK path
flutter_root = File.expand_path('/Volumes/My Shared Files/flutter')
require File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')

target 'Runner' do
  use_frameworks!
  use_modular_headers!  # Enable modular headers globally to fix Swift static library issues

  # Include all Flutter-managed pods
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Apply Flutter-specific build settings
    flutter_additional_ios_build_settings(target)

    # Ensure Swift pods are built with module support
    target.build_configurations.each do |config|
      config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '16.0'  # Match platform version
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
    end
  end
end